@model IEnumerable<Super_Solar_System.Entities.Habitant>

@{
    ViewBag.Title = "Habitant";
}

<h2 class="text-center">Planet Habitants</h2>

<hr />
<div class="container-fluid">
    <h4 class="col-md-6">
        <i class="fa fa-plus-circle" aria-hidden="true"></i>
        @Html.ActionLink("Create New", "Create")
    </h4>

    <div class="pull-right">
        @using (Html.BeginForm())
        {
            <p>
                Find by Name: @Html.TextBox("SearchString")
                <input class="btn btn-large" type="submit" value="Search" />
            </p>
        }
    </div>

</div>
<hr />
<br />

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <!-- <<<<<<<<<<<<<<<< Planet >>>>>>>>>>>>>>>>>> -->
            <div class="col-md-2 col-md-offset-1">
                <div class="person">
                    
                    <img src="~/images/SUN.jpg" alt="A Being" class="img-responsive">
                    <div class="person-content">
                        <h5>@Html.DisplayNameFor(model => model.Species) : </h5>
                        <h4>@Html.DisplayFor(modelItem => item.Species)</h4>
                        <br />
                        @if (User.IsInRole("admin"))
                        {
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </div>
                        }
                        <br />
                        <br />
                    </div>
                </div>
            </div>
            <!-- <<<<<<<<<<<<<<<< Planet >>>>>>>>>>>>>>>>>> -->
        }
    </div>
</div>


